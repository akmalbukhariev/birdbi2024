<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.birdbi.api.user.service.UserMapper">

    <select id="selectUser" resultType="camelMap">
        <![CDATA[
            SELECT *
            FROM user where phone_number = #{phone_number}
        ]]>
    </select>

    <insert id="insertUser">
        <![CDATA[
           INSERT INTO user
            (
                name
                ,phone_number
                ,email
                ,car_number
                ,profile_picture
            )
            VALUES
            (
                #{name}
                ,#{phone_number}
                ,#{email}
                ,#{car_number}
                ,#{profile_picture}
            )
        ]]>
    </insert>

</mapper>